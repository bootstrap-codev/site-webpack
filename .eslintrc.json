{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
		"eslint:recommended",
		"plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
	"plugins": [
		"prettier",
		"html"
    ],
	"settings": {
        "html/indent": "tab",
		"html/report-bad-indent": "error"
    },
    "rules": {
		"no-use-before-define": "off",
		"prettier/prettier": "error"
    }
}
